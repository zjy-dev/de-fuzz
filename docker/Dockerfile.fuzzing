# DeFuzz Fuzzing Environment
# Lightweight container with ARM cross-compilation and QEMU support

FROM ubuntu:22.04

# Avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install essential packages
RUN apt-get update && apt-get install -y \
    # Build tools
    build-essential \
    gcc \
    make \
    qemu-user \
    && rm -rf /var/lib/apt/lists/*

# Set up environment
WORKDIR /workspace

CMD ["/bin/bash"]
